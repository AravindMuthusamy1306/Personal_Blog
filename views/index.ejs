<%- include("partials/header.ejs") %>

<div class="hero-container">
    <h2>Welcome to My Personal Blog</h2>
    <p>This is a space where I share my thoughts, experiences, and insights on various topics.</p>
</div>
<div class = "content-container">
    <div class = "create-post">
        <form action="/post" method="post">
            <h2>Create a New Post</h2>
            <div class = "title-container">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
            </div>
            <div class="blog-container">
                <label for="blog">Content:</label>
                <textarea id="blog" name="blog" rows="4" required></textarea>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
    <h2>Latest Posts</h2>
    <div class="posts-container">
        <% posts.forEach((post, index) => { %>
            <div class="post">
                <h3><%= post.title %></h3>
                <p><%= post.blog %></p>
                <p class = "blog-creation">Date of Creation: <%= post.date %> <%= post.time %></p>
                <form action="/delete" method="post">
                    <input type="hidden" name="title" value="<%= post.title %>">
                    <input type="hidden" name="blog" value="<%= post.blog %>">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% }) %>
    </div>
    <p>Feel free to explore the site and get in touch through the contact page.</p>
    <p>Thank you for visiting!</p>
</div>
</body>
<%- include("partials/footer.ejs") %>
    
